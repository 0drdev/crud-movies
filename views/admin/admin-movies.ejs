<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
</head>
<body>

  <%- include('../partial/admin/navbar') %>

  <main class="container-fluid">

    <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mb-5">
      <div class="my-3 text-end">
          <a href="/admin/movies/create" class="btn btn-success w-25">Crear Película</a>
      </div>

      
      <div class="table-responsive">

        <table class="table table-striped" >
          <thead>
            <tr>
              <th scope="col">#</th>
                <th scope="col">Título</th>
                <th scope="col">Año</th>
                <th scope="col">Director</th>
                <th scope="col">Duración</th>
                <!-- <th scope="col">Poster</th> -->
                <th scope="col">Genero</th>
                <th scope="col">Calificación</th>
                <th scope="col">Editar</th>
                <th scope="col">Borrar</th>
            </tr>
          </thead>

          <tbody>
            <% movies.forEach((movie, index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= movie.title %></td>
                <td><%= movie.year %></td>
                <td><%= movie.director %></td>
                <td><%= movie.duration %></td>
                <!-- <td><%= //movie.poster //%></td> -->
                <td><%= movie.genre %></td>
                <td><%= movie.rate %></td>
                <td><a href="/admin/movies/edit/<%= movie.id %>" type="button" class="btn btn-primary">Editar</a></td>
                <td><a href="/admin/movies/delete/<%= movie.id %>" type="button" class="btn btn-danger">Borrar</a></td>
              </tr>
            <% }) %>

          </tbody>
        </table>
      </div>

    </div>
  </main>

  <%- include('../partial/admin/scripts') %>

</body>
</html>